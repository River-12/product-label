<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="riverstone_product_labels" resource="default" engine="innodb" comment="Distance Shipping Warehouse Table">
        <column xsi:type="int" name="label_id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="name" comment="Longitude" nullable="false"/>
        <column xsi:type="varchar" name="enable" comment="Latitude" nullable="false"/>
        <column xsi:type="varchar" name="store_view" comment="Street" nullable="false" />
        <column xsi:type="varchar" name="customer_group" comment="City" nullable="false" />
        <column xsi:type="timestamp" name="from_date" comment="State" nullable="false" />
        <column xsi:type="timestamp" name="to_date" comment="Country" nullable="false" />
        <column xsi:type="varchar" name="priority" comment="Zipcode" nullable="false" />
        <column xsi:type="varchar" name="image" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="label_name" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="text_color" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="background_color" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="shape" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="position" comment="Status" nullable="false" />
        <column xsi:type="varchar" name="product_label_select" comment="Status" nullable="false" />
        <column xsi:type="mediumtext" name="conditions_serialized" comment="Status" nullable="false" />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="label_id"/>
        </constraint>
    </table>
</schema>