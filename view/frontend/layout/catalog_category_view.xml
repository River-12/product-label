<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.products.list">
            <action method="setTemplate" ifconfig="riverstone_product_label/general/use_in_catalog">
                <argument name="template" xsi:type="string">Riverstone_ProductLabel::product/list.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Riverstone\ProductLabel\ViewModel\Label</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
