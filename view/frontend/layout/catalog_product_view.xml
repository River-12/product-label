<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.media.image">
            <action method="setTemplate" ifconfig="riverstone_product_label/general/use_in_product">
                <argument name="template" xsi:type="string">Riverstone_ProductLabel::product/view/gallery.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Riverstone\ProductLabel\ViewModel\Label</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>